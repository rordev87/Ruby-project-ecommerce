<div class="row product-details">
  <nav class="navbar nav-menu details-brand">
    <div class="navbar-brand">
      <%= t "product.show.details" %>
    </div>
  </nav>
  <div class="card">
    <div class="container-fliud">
      <div class="wrapper row">
        <div class="preview col-md-6">
          <div class="preview-pic tab-content">
            <div class="tab-pane active" id="pic-1">
              <img src="<%= @product.product_image %>" />
            </div>
            <div class="tab-pane" id="pic-2">
              <img src="<%= @product.product_image %>" />
            </div>
          </div>
          <ul class="preview-thumbnail nav nav-tabs">
            <li class="active">
              <a data-target="#pic-1" data-toggle="tab">
                <img src="<%= @product.product_image %>" />
              </a>
            </li>
            <li>
              <a data-target="#pic-2" data-toggle="tab">
                <img src="<%= @product.product_image %>" />
              </a>
            </li>
          </ul>
        </div>
        <div class="details col-md-6">
          <h3 class="product-title"><%= @product.product_name %></h3>
          <div class="rating">
            <% if logged_in? %>
              <div class="stars-logged" data-score="<%= @avg_rating %>"
                data-product-id="<%= @product.id %>">
                <h4><%= t "product.show.rating" %></h4>
              </div>
            <% else %>
              <div class="stars" data-score="<%= @avg_rating %>"
                data-product-id="<%= @product.id %>">
                <h4><%= t "product.show.rating" %></h4>
              </div>
            <% end %>
            <span class="review-no">
              <%= pluralize( @count_rating,
                I18n.t("product.show.count")) %>.
              (<%= t "product.show.average" %> <%= @avg_rating %>)
            </span>
          </div>
          <p class="product-description">
            <%= simple_format(@product.product_details) %>
          </p>
          <h4 class="price">current price:
            <span><%= t("product.show.product_price",
              price:@product.price_normal) %>
            </span>
          </h4>
          <div>
            <%= render "layouts/add_cart", product: @product %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="fb-comments" xid="p1"<%= @product.id %>" data-numposts="5"></div>
</div>
