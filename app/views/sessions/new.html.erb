<div class="container-signin">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-4 col-md-offset-4 well well-sm">
      <div class="panel-body">
        <h3 class="text-center">
          <b><%= t "sessions.new.signin_box_title"%></b>
        </h3>
        <hr/>
        <div class="error_message">
          <% if @login_fails %>
            <p><%= @login_fails %></p>
          <% end %>
        </div>
        <%= form_for(:session, url: login_path) do |f| %>
          <div class="input-group">
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-envelope"></span>
            </span>
            <%= f.email_field :email, class: "form-control",
              autofocus: true %>
          </div>
          <br/>
          <div class="input-group">
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-lock"></span>
            </span>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <br/>
          <div class="input-group">
            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span><%= t "sessions.new.remember"%></span>
            <% end %>
          </div>
          <%= f.submit I18n.t("sessions.new.signin_box_title"),
            class: "btn btn-primary" %>
        <% end %>
        <hr/>
        <h5>
          <%= t "sessions.new.question"%>
          <%= link_to I18n.t("sessions.new.signup"), signup_path %>
        </h5>
      </div>
    </div>
  </div>
</div>
