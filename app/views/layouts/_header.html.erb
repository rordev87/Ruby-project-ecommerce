<header class="header-layout">
  <div class="row">
    <div class="header-top">
      <div class="container">
        <div class="row clearfix">
          <div class="col-md-3 col-xs-12 text-center">
            <div class="logo-store">
              <%= link_to image_tag("/assets/logo-p.png"), root_path %>
            </div>
          </div>
          <div class="col-md-6 col-sm-8 col-xs-10">
            <div class="input-group">
              <%= form_tag products_path,method: "get" do %>
                <%= search_field_tag :search, params[:search],
                  class: "form-control",
                  placeholder: I18n.t("layouts.header.search_holder") %>
                <span class="input-group-btn">
                  <%= submit_tag I18n.t("layouts.header.search"),
                    name: :subsearch, class: "btn btn-default" %>
                </span>
              <% end %>
            </div>
          </div>
          <% if logged_in? %>
           
           
            <div class="col-md-3 col-sm-2 col-xs-2 btn-sign-group">
              <ul class="nav navbar-right">
                <li class="dropdown">
                  <button class="btn dropdown-toggle btn-account"
                    data-toggle="dropdown">
                    <%= t ".account" %>
                    <span class="glyphicon glyphicon-user pull-right"></span>
                  </button>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to orders_path(user_id: current_user.id) do %>
                        <%= t ".order_history" %>
                        <span class="glyphicon glyphicon-cog pull-right">
                        </span>
                      <% end %>
                    </li>
                    
                    <li class="divider"></li>
                    <li>
                      <%= link_to user_path(current_user.id) do %>
                        <%= t ".profile" %>
                        <span class="glyphicon glyphicon-stats pull-right">
                        </span>
                      <% end %>
                    </li>
                    <%  if current_user.is_admin? %>

                    <li>
                      <%= link_to admin_users_path do %>
                      <%= t ".user" %>
                      <span class="glyphicon glyphicon-user pull-right">
                      </span>
                      <% end %>
                    </li>

                    <li>
                      <%= link_to new_user_path do %>
                      <%= t ".add" %>
                      <span class="glyphicon glyphicon-user pull-right">
                      </span>
                      <% end %>
                    </li>
                     <li>
                      <%= link_to admin_categories_path do %>
                      <%= t ".cate" %>
                      <span class="glyphicon glyphicon-education pull-right">
                      </span>
                      <% end %>
                    </li>
                   

                    <% end %>
                    <li>
                      <%= link_to logout_path, method: "delete" do %>
                        <%= t ".logout" %>
                        <span class="glyphicon glyphicon-log-out pull-right">
                        </span>
                      <% end %>
                    </li>
                    </ul>
                  
                </li>
              </ul>
            </div>
          <% else %>
            <div class="col-md-3 col-sm-2 col-xs-2 hidden-xs hidden-sm
              btn-sign-group">
              <ul class="nav navbar-right list-inline">
                <li>
                  <button class="btn">
                    <%= link_to signup_path do %>
                      <%= t ".sign_up" %>
                    <% end %>
                  </button>
                </li>
                <li>
                  <button class="btn">
                    <%= link_to login_path do %>
                      <%= t ".sign_in" %>
                    <% end %>
                  </button>
                </li>
              </ul>
            </div>
            <div class="col-md-2 col-sm-2 col-xs-2 hidden-md hidden-lg
              hidden-xl btn-sign-hidden">
              <ul class="nav navbar-left">
                <li class="dropdown">
                  <button class="btn btn-primary dropdown-toggle"
                    data-toggle="dropdown">
                    <span class="glyphicon glyphicon-th-list"></span>
                  </button>
                  <ul class="dropdown-menu pull-right">
                    <div>
                      <li>
                        <%= link_to signup_path do %>
                          <span class="glyphicon glyphicon-user"></span>
                          <%= t ".sign_up" %>
                        <% end %>
                      </li>
                      <li>
                        <%= link_to login_path do %>
                          <span class="glyphicon glyphicon-log-in"></span>
                          <%= t ".sign_in" %>
                        <% end %>
                      </li>
                    </div>
                  </ul>
                </li>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="header-bottom">
      <nav class="nav navbar-custom navbar-static">
        <div class="navbar-header">
          <button class="navbar-toggle" type="button" data-toggle="collapse"
            data-target=".js-navbar-collapse">
            <span class="sr-only"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to I18n.t("layouts.header.name_of_web"), root_path,
            class: "navbar-brand"%>
        </div>
        <div class="collapse navbar-collapse js-navbar-collapse">
          <ul class="nav navbar-nav">
            <li>
              <%= link_to products_path do %>
                <%= t ".recent" %>
              <% end %>
            </li>
            <li>
              <%= link_to about_path do %>
                <%= t ".introduce" %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <%= t ".new" %>
              <% end %>
            </li>
            <li>
              <%= link_to help_path do %>
                <%= t ".help" %>
              <% end %>
            </li>
            <li>
              <%= link_to contact_path do %>
                <%= t ".contact" %>
              <% end %>
            </li>
          </ul>
          <ul class="nav navbar-right link-cart">
            <li class="cart-text"><%= render "layouts/cart_text" %></li>
          </ul>
        </div>
      </nav>
    </div>
  </div>
</header>
